<Window x:Class="OpenIdConnectWPFHybridClient.IdentityTokenViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TokenViewer" Height="600" Width="600">
    <Grid>
        <Label Content="Header" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="Text1"  VerticalAlignment="Top" TextWrapping="Wrap" Height="120" Margin="10,40,0,0" FontSize="16" />
        <Label Content="Body" VerticalAlignment="Top" Margin="10,180,0,0"/>
        <TextBox x:Name="Text2" VerticalAlignment="Top" TextWrapping="Wrap" Height="300" Margin="10,220,0,0" FontSize="16" />
    </Grid>
</Window>
