@* model is only available when is post back *@
@model string
<div class="jumbotron">
    @if (Request.IsAuthenticated)
    {
        <h1>Welcome, @User.Identity.Name</h1>

        if (!string.IsNullOrWhiteSpace(Model))
        {
            <h3>Message received from the resource controller: </h3>
            <pre>@Model</pre>
        }

        <form action="~/" method="post">
            
            <button class="btn btn-lg btn-warning" type="submit" name="submit.Api" value="Query">Query the resource controller</button>
            <button class="btn btn-lg btn-warning" type="submit" name="submit.Update" value="Update">Update the access token </button>
        </form>

        <a class="btn btn-lg btn-danger" href="/Authenticate/Signout">Sign out</a>
    }

    else
    {
        <h1>Welcome to OpenIdConnect hybrid client app</h1>
        <a class="btn btn-lg btn-success" href="/Authenticate/Signin">Sign in</a>
    }
</div>