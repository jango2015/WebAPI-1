@* model is only available when is post back *@
@model string
<div class="jumbotron">
    @if (Request.IsAuthenticated)
    {
        <h1>Welcome, @User.Identity.Name</h1>

        if (!string.IsNullOrWhiteSpace(Model))
        {
            <h3>Message received from the resource controller: @Model</h3>
        }

        <p>
            <strong>Access token:</strong>
            <pre>@ViewBag.AccessToken</pre>
        </p>
        <p>
            <strong>Refresh token:</strong>
            <pre>@ViewBag.RefreshToken</pre>
        </p>
        <p>
            <strong>Id token Header :</strong>
            <pre>@ViewBag.IdTokenHeader</pre>
        </p>

        <p>
            <strong>Id token Payload :</strong>
            <pre>@ViewBag.IdTokenPayload</pre>
        </p>

        <p>
            <strong>Id token Signature :</strong>
            <pre>@ViewBag.IdTokenSignature</pre>
        </p>

        <form action="~/" method="post">
            <button class="btn btn-lg btn-warning" type="submit">Query the resource controller</button>
        </form>

        <a class="btn btn-lg btn-danger" href="/Authenticate/Signout">Sign out</a>
    }

    else
    {
        <h1>Welcome to OpenIdConnect code client app</h1>
        <a class="btn btn-lg btn-success" href="/Authenticate/Signin">Sign in</a>
    }
</div>